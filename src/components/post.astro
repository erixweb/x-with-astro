import TweetButtons from "./tweet-buttons.svelte";

interface Props {
    id: string
    userFullName: string,
    username: string,
    content: string,
    date: string,
    profilePicture: string
}

const { userFullName, username, content, id, date, profilePicture} = Astro.props

const getTimeDiff = (date: any) => {
    const postDate = new Date(date)
    const currentDate = new Date()

    console.log(currentDate.getDate() - postDate.getDate())
    if ((postDate.getDate() - currentDate.getDate()) === 0) {
        if ((postDate.getMinutes() - currentDate.getMinutes()) === 0) {
            return `${currentDate.getSeconds() - postDate.getSeconds()}s`
        } else {
            return `${currentDate.getMinutes() - postDate.getMinutes()}min`
        }
    } else {
        return `${postDate.getHours() - currentDate.getHours()}h`
    }

} 
